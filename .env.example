WS_URL="wss://ws.myapp.com"

# Optional: Database configuration
DB_NAME="myappdb"
DB_ENCRYPTION_KEY="random-32byte-secret"
CACHE_TTL="3600"

# Security & Encryption
JWT_SECRET="your-jwt-secret-key-here"
AES_ENCRYPTION_KEY="your-32-character-encryption-key"

# Feature Flags
ENABLE_BIOMETRIC_AUTH="true"
ENABLE_SOCIAL_LOGIN="true"
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_PUSH_NOTIFICATIONS="false"
ENABLE_ANALYTICS="false"

# =============================================
# Authentication Method Feature Flags
# =============================================
# Enable or disable specific authentication methods
# Set to 'true' or 'false' to control which auth methods appear in the UI
# At least one method must be enabled for the app to function

# Email/Password Authentication
# Traditional email and password sign-in
ENABLE_LOGIN_EMAIL_PASSWORD="true"

# Email Magic Link (Passwordless Authentication)
# Users receive a magic link via email to sign in without entering a password
# Requires: Firebase Auth Email/Password provider enabled
ENABLE_LOGIN_EMAIL_MAGIC_LINK="true"

# Email OTP (One-Time Password via Email)
# Users receive a 6-digit verification code via email
# Note: Custom implementation, not a native Firebase feature
ENABLE_LOGIN_EMAIL_OTP="true"

# Phone OTP (SMS Verification)
# Users receive SMS verification code for authentication
# Requires: Firebase Auth Phone provider enabled + Twilio setup
ENABLE_LOGIN_PHONE_OTP="true"

# Google Sign-In
# OAuth authentication via Google account
# Requires: Firebase Auth Google provider enabled + Google OAuth setup
# Note: Not available in Expo Go (requires development build)
ENABLE_LOGIN_GOOGLE="true"

# Apple Sign-In
# OAuth authentication via Apple ID
# Requires: Firebase Auth Apple provider enabled + Apple Developer account
# Note: Required for iOS App Store if using any social authentication
ENABLE_LOGIN_APPLE="true"

# Facebook Sign-In
# OAuth authentication via Facebook account
# Requires: Firebase Auth Facebook provider enabled + Facebook App setup
ENABLE_LOGIN_FACEBOOK="false"

# Biometric Authentication
# FaceID, TouchID, or Fingerprint for quick login
# Requires: Device with biometric hardware + user enrollment
# Users must enable in app settings after first login
ENABLE_LOGIN_BIOMETRIC="true"

# Two-Factor Authentication (2FA)
# Time-based OTP (TOTP) or SMS-based second authentication factor
# Requires: ENABLE_LOGIN_EMAIL_PASSWORD="true"
# Enhances security for password-based accounts
ENABLE_LOGIN_TWO_FACTOR="true"

# Development Settings
USE_FIREBASE_EMULATOR="false"
DEBUG_MODE="true"
LOG_LEVEL="debug"

# Optional: Analytics and monitoring
SENTRY_DSN="https://xxxx.ingest.sentry.io/1234"
AMPLITUDE_KEY="abcd1234"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MIXPANEL_TOKEN="your-mixpanel-token"

# Email Service (if using custom email provider)
SENDGRID_API_KEY="your-sendgrid-api-key"
MAILGUN_API_KEY="your-mailgun-api-key"

# SMS Service (for phone verification)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Social Media APIs (for profile import)
FACEBOOK_APP_ID="your-facebook-app-id"
TWITTER_API_KEY="your-twitter-api-key"
LINKEDIN_CLIENT_ID="your-linkedin-client-id"